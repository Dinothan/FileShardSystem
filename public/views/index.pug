doctype html
html(lang='en')
    head
        title File Shard
        //- link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' rel='stylesheet')
        //- link(href='../css/stylesheet.css' rel='stylesheet')
        script(src='/socket.io/socket.io.js')
        script(src='../js/script.js')
        script(src='../../src/index.js')
    body
        div.row 
            table(style='width:100%' border='1')
                tr
                    th(style="background-color:#72e8e4") Server node
                    th(style="background-color:#72e8e4") Leader node
                    th(style="background-color:#72e8e4") Learner node
                tr(style="text-align: center") 
                    td 
                        h3#myId=  id
                    td  
                        h3#leader=  idLeader
                    td  
                        h3#learner=  idLearner

        div.row
            div.main.col-6.text-center
                if id === idLeader
                    //- button(type='button' class='btn btn-outline-primary btn-lg' onclick='killing()') Kill the node!
                    p I am the Leader node!
                if id === idLearner
                    p I am the Learner node!
        div.row
            h3#msg= ""
        div.row
            div#inputfile
                if id === idLeader
                    p Upload file here: 
                    input(type='file' id="mySelect" onChange="fileUpload()")
        <div id="inputdownload" style="display:none">
            if id === idLeader
                button(type='button' class='btn btn-outline-primary btn-lg' onclick='downloding()') Download File

        </div>

        div.main.col-5
            ul(class='list-group' id='log-list')
                li.list-group-item.active Server Logs
